generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  firstName  String
  lastName   String
  isVerified Boolean  @default(false)
  password   String
  files      File[]
  folders    Folder[]
}

model File {
  id            Int      @id @default(autoincrement())
  name          String
  sizeInKb      Int
  fileExtension String
  uploadedAt    DateTime @default(now())
  location      String
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  folder        Folder   @relation(fields: [folderId], references: [id])
  folderId      Int

  @@unique(name: "fileId", [userId, name])
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  files  File[]
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique(name: "folderId", [userId, name])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
